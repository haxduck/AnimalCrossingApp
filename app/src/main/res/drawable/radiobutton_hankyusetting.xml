<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- UNSELECTED -->
    <item android:state_checked="false">
        <layer-list>
            <!-- 배경 -->
            <item
                android:left="2dp"
                android:top="2dp">

                <shape android:shape="rectangle">
                    <corners
                        android:radius="5dp" />
                    <solid android:color="#C4B8A0" />
                    <stroke
                        android:width="3dp"
                        android:color="#C4B8A0" />
                </shape>
            </item>
            <item
                android:right="2dp"
                android:bottom="2dp">
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" >
                    <corners
                        android:radius="5dp" />
                    <solid
                        android:color="#E9E9E9" />
                    <stroke
                        android:width="3dp"
                        android:color="#E9E9E9" />
                </shape>
            </item>

        </layer-list>

    </item>
    <!-- SELECTED -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item
                android:left="2dp"
                android:top="2dp">

                <shape android:shape="rectangle">
                    <corners
                        android:radius="5dp" />
                    <solid android:color="#C4B8A0" />
                    <stroke
                        android:width="3dp"
                        android:color="#C4B8A0" />
                </shape>
            </item>
            <item
                android:right="2dp"
                android:bottom="2dp">
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" >
                    <corners
                        android:radius="5dp" />
                    <solid
                        android:color="#DCFFF5" />
                    <stroke
                        android:width="2dp"
                        android:color="#7C6839" />
                </shape>
            </item>

        </layer-list>
    </item>



</selector>