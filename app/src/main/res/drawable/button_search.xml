<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="3dp"
        android:top="3dp">

        <shape android:shape="rectangle">
            <corners
                android:radius="10dp" />
            <solid android:color="#C4B8A0" />
            <stroke
                android:width="3dp"
                android:color="#C4B8A0" />
        </shape>
    </item>

    <!-- UNSELECTED -->
    <item
        android:right="3dp"
        android:bottom="3dp"
        android:state_checked="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <corners
                android:radius="3dp" />
            <solid
                android:color="#E9E9E9" />
            <stroke
                android:width="3dp"
                android:color="#E9E9E9" />
        </shape>
    </item>
    <!-- SELECTED -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" >
                    <corners
                        android:radius="2dp" />
                    <solid
                        android:color="#DCFFF5" />
                    <stroke
                        android:width="3dp"
                        android:color="#7C6839" />
                </shape>
            </item>

        </layer-list>
    </item>



</selector>