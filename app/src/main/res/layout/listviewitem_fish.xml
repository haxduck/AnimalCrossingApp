<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <FrameLayout
        android:id="@+id/grid_wrap"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/list_wrap"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/grid_wrap">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/view_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_anchovy" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="さかな"
                android:textSize="14dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/icon_month" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="10~12月"
                android:textSize="12dp" />


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/icon_time" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="35dp"
                android:text="16~24時"
                android:textSize="12dp" />


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/icon_bell" />


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/icon_location" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="55dp"
                android:text="川"
                android:textSize="12dp" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="18dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="55dp"
                android:text="10000"
                android:textSize="12dp" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/size_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="210dp"
                android:src="@drawable/smallest" />


        </FrameLayout>

    </FrameLayout>


</LinearLayout>