<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="current"
            type="com.example.animalcrossingapp.database.Current" />
        <variable
            name="time"
            type="String" />
        <variable
            name="month"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/grid_wrap"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:background='@{current.flag.equals("1") ? @drawable/list_wrap_c : @drawable/list_wrap}'
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/grid_wrap">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background='@{current.flag.equals("1") ? @drawable/grid_wrap_r : @drawable/grid_wrap}'
                    android:src='@{"android.resource://com.example.animalcrossingapp/drawable/" + current.information_code}' />
            </FrameLayout>

            <FrameLayout
                android:layout_width="270dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@{current.name}"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/icon_month" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:text="@{month}"
                    android:textSize="12dp" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/icon_time" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="90dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="35dp"
                    android:text="@{time}"
                    android:textSize="12dp" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="55dp"
                    android:src="@drawable/icon_bell" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="55dp"
                    android:src="@drawable/icon_location" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="55dp"
                    android:text="@{current.habitat}"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="55dp"
                    android:text='@{"" + current.price}'
                    android:textSize="12dp" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/size_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="210dp"
                    />


            </FrameLayout>

        </FrameLayout>


    </LinearLayout>
</layout>